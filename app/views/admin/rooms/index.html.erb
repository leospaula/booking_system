<div class="container">
  <div class="col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Listing Rooms</h1>

    <div class="panel panel-default">
    <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Type</th>
          <th>Quantity available</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.type_r %></td>
            <td><%= room.quantity %></td>
            <td><%= number_to_currency(room.price) %></td>
            <td style="text-align: center;">
              <%= link_to 'Edit', edit_admin_hotel_room_path(id: room.id), class: "btn btn-raised btn-xs" %>
              <%= link_to 'Remove', admin_hotel_room_path(id: room.id), method: :delete, class: "btn btn-raised btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>

    <br>

    <%= link_to 'New Room', new_admin_hotel_room_path, class: "btn btn-primary" %>
  </div>
</div>