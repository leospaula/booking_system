<%= form_for [:admin, @hotel, @room], class: "form-signin" do |f| %>

  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :type_r, autofocus: true, class: 'form-control', placeholder: "Room Type" %>
  </div>

  <div class="form-group">
    <%= f.number_field :quantity, class: 'form-control', placeholder: "Number of rooms available", pattern: "-?[0-9]*(\.[0-9]+)?" %>
  </div>
  
  <div class="form-group">
    <%= f.number_field :price, class: 'form-control', placeholder: "Room price", pattern: "-?[0-9]*(\.[0-9]+)?", step: "0.1" %>
  </div>

  <%= f.submit 'Submit', class: "btn btn-primary" %>
  <%= link_to 'Back', admin_hotel_rooms_path, class: "btn btn-default" %>
<% end %>