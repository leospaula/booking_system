<%= form_for  @booking, class: "form-signin" do |f| %>
<%= f.hidden_field(:room_id, :value => params[:room_id]) unless params[:room_id].nil? %>

  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> :</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.date_field :start_time, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.date_field :end_time, class: 'form-control' %>
  </div>
  

  <%= f.submit 'Submit', class: "btn btn-primary" %>
  <%= link_to 'Back', root_path, class: "btn btn-default" %>
<% end %>
