<div class="container">
  <div class="col-sm-10 col-sm-offset-1">

    <h1>Listing Bookings</h1>

    <div class="panel panel-default">
    <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Hotel Name</th>
          <th>Room Type</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.hotel_name %></td>
            <td><%= booking.room.type_r %></td>
            <td><%= l booking.start_time, format: :custom %></td>
            <td><%= l booking.end_time, format: :custom %></td>
            <td style="text-align: center;">
              <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-raised btn-xs" %>
              <%= link_to 'Cancel', booking_path(booking), method: :delete, class: "btn btn-raised btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>

  </div>
</div>