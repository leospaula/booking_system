<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {class: "form-signin"}) do |f| %>
      <h2 class="form-signin-heading">Forgot your password?</h2>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => "E-mail" %>
      </div>

      <%= f.submit "Send me reset password instructions", {:class => "btn btn-lg btn-primary btn-block"} %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>